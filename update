#!/system/bin/sh

# CPU
echo "performance" > /sys/devices/system/cpu/*/cpufreq/scaling_governor

# GPU
echo "performance" > /sys/class/kgsl/kgsl-3d0/devfreq/governor

# RAM
echo "0" > /proc/sys/vm/swappiness
echo "100" > /proc/sys/vm/vfs_cache_pressure
echo "60" > /proc/sys/vm/dirty_ratio
echo "30" > /proc/sys/vm/dirty_background_ratio
echo "10" > /proc/sys/vm/dirty_expire_centisecs
echo "200" > /proc/sys/vm/dirty_writeback_centisecs

# I/O
echo "bfq" > /sys/block/mmcblk0/queue/scheduler
echo "bfq" > /sys/block/mmcblk1/queue/scheduler
echo "15" > /sys/block/mmcblk0/queue/iosched/back_seek_max
echo "15" > /sys/block/mmcblk1/queue/iosched/back_seek_max

# Internet
echo "4096,87380,256960,4096,16384,256960" > /proc/sys/net/ipv4/tcp_rmem
echo "4096,87380,256960,4096,16384,256960" > /proc/sys/net/ipv4/tcp_wmem
echo "tcp_westwood" > /proc/sys/net/ipv4/tcp_congestion_control
echo "1" > /proc/sys/net/ipv4/tcp_timestamps
echo "1" > /proc/sys/net/ipv4/tcp_window_scaling
